{
  "name": "qr-factory-offline",
  "version": "2.0.1",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win portable"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "www/**",
      "node_modules/**",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "QR Factory Offline.exe"
    }
  }
}
